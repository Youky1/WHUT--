page{
    font-size: large;
}
scroll-view{
    height:90vh
}
.container{
    width: 100%;
    border-bottom: 2rpx solid #777;
}
swiper{
    width: 100%;
    height: 500rpx;
}
.swiperImg{
    width: 100%;
    height: 500rpx;
}

/* 首行容器 */
.titleLine{
    width: 100vw;
    margin: 20rpx 0;
    height: 60rpx;
    display: flex;
}
/* 标题 */
.titleLine .title{
    font-size: 40rpx;
    font-weight: bold;
    line-height: 60rpx;
    margin-left: 30rpx;
    overflow: hidden;
    white-space:nowrap;
    width: 80vw;
}
/* 收藏按钮 */
.titleLine .collectBtn{
    width: 50rpx;
    height: 50rpx;
    border-radius: 60rpx;
}

/* 价格行容器 */
.priceBox{
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-bottom: 30rpx;
}
/* 当前价格 */
.priceBox .currentPrice{
    font-size: 60rpx;
    margin: 0 20rpx;
    color: red;
}
/* 原价 */
.priceBox .originPrice{
    text-decoration: line-through;
}
/* 小号文字 */
.littleFontWord{
    line-height: 32rpx;
    font-size: 24rpx;
    color:#999999
}

/* 物品描述 */
.description{
    margin: 50rpx 0;
    text-indent: 50rpx;
    overflow:hidden;
    color: #999999;
    font-size: 32rpx;
}


/* 数量和时间所在行的容器 */
.nunberBox{
    display: flex;
    justify-content: space-around;
}


/* 卖家信息容器 */
.solderInfoBox{
    height: 180rpx;
    margin-top: 40rpx;
    border-top: 2rpx solid #777;
    border-bottom: 2rpx solid #777;
    display: flex;
    align-items: center;
}

/* 用户头像框 */
.solderInfoBox .avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    background-color: #D8D8D8;
    margin: 0 40rpx;
}

/* 用户信息右侧容器 */
.solderInfoBox .solderInfoRightContainer{
    height: 100%;
    width: 520rpx;
}

/* 姓名和性别一行的容器 */
.solderInfoBox .solderInfoRightContainer .solderNameLine{
    height: 50%;
    line-height: 120rpx;
}

/* 用户姓名 */
.solderInfoBox .solderInfoRightContainer .solderNameLine .solderName{
    color: #999999;
    font-size: 32rpx;
}

/* 用户性别 */
.solderInfoBox .solderInfoRightContainer .solderNameLine .solderSex{
    height: 28rpx;
    width: 28rpx;
    margin-left: 20rpx;
}

/* 用户联系方式 */
.solderInfoBox .solderInfoRightContainer .solderContact{
    color: #999999;
    font-size: 28rpx;
}


/* 底部功能按钮容器 */
.functionButtonBox{
    height: 120rpx;
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

/* 四个功能按钮 */
.functionButtonBox .functionBtn{
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

/* 按钮图片 */
.functionButtonBox .functionBtn .functionImg{
    width:52rpx;
    height: 44rpx;
}

/* 按钮文字 */
.functionButtonBox .functionBtn .functionText{
    font-size: 22rpx;
    color: #666666;
}