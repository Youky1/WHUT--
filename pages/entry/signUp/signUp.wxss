/* 头像 */
.avatarContainer{
    height: 250rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.avatar{
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
}

/* 信息类别header */
.infoHeader{
    height: 40rpx;
    line-height: 40rpx;
    background-color: #ccc;
}

/* 信息输入框 */
.infoText{
    height: 80rpx;
    line-height: 80rpx;
}
.infoInput{
    height: 80rpx;
    overflow: hidden;
}

/* 各个按钮 */
.vcodeBtn{
    line-height: 80rpx;
    font-size: 28rpx;
}
.phoneBtn{
    width: 200rpx;
    height: 80rpx;
    border-radius: 20rpx;
    margin: 20rpx auto;
}
.submitBtn{
    width: 50vw;
    border-radius: 40rpx;
    background-color: rgb(47,189,253);
    margin: 30rpx auto;
}

/* 注册指引navigator */
.guide{
    height: 40rpx;
    width: 100%;
    color: rgb(47,189,253);
    display: flex;
    flex-direction: row-reverse;
}