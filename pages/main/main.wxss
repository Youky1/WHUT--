page, .main {
    width: 100%;
    height: 100%;
    overflow: hidden;
    font-size: 16px;
}
/* 首部总容器 */
.mainBox{
    height: 480rpx;
    background-color: #2fbdfd;
    padding-top:20rpx;
    transition: all 1s;
}

/* 搜索栏总容器 */
.main-search {
    height: 80rpx;
    width: 100%;
}
/* 搜索框容器 */
.search-box {
    font-size: 12px;
    margin-left: 30rpx;
    display: flex;
    height: 65rpx;
    width: 90%;
    border-radius: 50rpx;
    background-color: #fff;
    color: #4a4a4a;
    text-align: center;
}
/* 搜索框输入区 */
.search-input{
    height: 64rpx;
    width: 80%;
    line-height: 64rpx;
}
/* 搜索按钮 */
.search-btn{
    width: 9vw;
    height: 58rpx;
    margin-left: 20rpx;
}

/* 分类区总容器 */
.main-sort {
    height: 380rpx;
    width: 100%;
    overflow: hidden;
}
/* 每一行的容器 */
.sortLine{
    height: 33%;
    width: 100%;
    display: flex;
    justify-content: space-around;
}
/* 每一个分类的容器 */
.sortItem{
    height: 100%;
    width: 20vw;
    display: flex;
    flex-direction: column;
}
/* 分类图片 */
.sortImage {
    width: 100%;
    text-align: center;
    font-size: 80rpx;
}
/* 分类文字 */
.sortText {
    display: block;
    color: #000;
    font-size: 13px;
    margin-left: 10px;
}

/* 商品区域总容器 */
.main-goodsBox {
    border-radius: 50rpx;
    height: 830rpx;
    background-color: #fff;
}
.pickerBox {
    float: left;
    margin-left: 50rpx;
}
.goodsPicker {
    font-size: 12px;
    margin: 10px 35px 0px 10px;
    display: inline-block;
}
.showingMode{
    font-size: 20rpx;
}
.goodsScroll {
    height: 1000rpx;
    background-color: #fff;
}

/* 返回按钮 */
.backBtn{
    background-color: #fff;
    position: fixed;
    bottom:15vh;
    right: 5vw;
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
}