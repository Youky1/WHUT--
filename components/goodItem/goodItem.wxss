/* 保证物品组件可以并排 */
Page{
	display: inline-block;
	text-overflow:ellipsis;
}

/*整体容器*/
.outContainer{
    width: 46vw;
    height: 550rpx;
    display: inline-block;
	margin: 6rpx 1.5vw;
	border: 2rpx #000 solid;
	border-radius: 10rpx;
}

/*商品图片*/
.goodImage{
	width: 100%;
	height: 330rpx;
}

/*商品名称*/
.goodName{
	height: 40rpx;
	text-indent: 30rpx;
	font-weight: bold;
	color: #030303;
	font-size: 30rpx;
	overflow: hidden;
}

/* 物品信息容器 */
.goodInfoBox{
	display: flex;
	height: 50rpx;
}

.goodInfoBox .price{
	color: red;
	margin-right: 20rpx;
	font-size: 18px;
}

.goodInfoBox .looked,.area{
	line-height: 50rpx;
	font-size: 10px;
	color: #999999;
	vertical-align: bottom;
	margin-left: 20rpx;
}

/* 物品描述 */
.description{
	padding: 0 10rpx;
	height: 50rpx;
	color: #999999;
	font-size: 10px;
	word-break:break-all;
	margin:5rpx 0;
}

/* 卖家信息栏 */
.solderInfoBox{
	display: flex;
	width: 24vw;
	justify-content: space-around;
	align-items: center;
}
.solderAvatar{
	height: 32rpx;
	width: 32rpx;
	border-radius: 16rpx;
	background-color: #D8D8D8;
}